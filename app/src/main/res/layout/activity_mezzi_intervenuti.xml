<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tizi.vvf.MezziIntervenuti">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/line"
        android:layout_above="@+id/ConfBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conferma"
        android:id="@+id/ConfBtn"
        android:width="160dp"
        android:height="20dp"
        android:layout_alignTop="@+id/AnnBtn"
        android:layout_alignEnd="@+id/line" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annulla"
        android:id="@+id/AnnBtn"
        android:width="160dp"
        android:height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A.P.S"
        android:id="@+id/CkbAps"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textSize="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autoscala"
        android:id="@+id/CkbAutoscala"
        android:layout_below="@+id/CkbAps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:textSize="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autobotte"
        android:id="@+id/CkbAutoBotte"
        android:layout_below="@+id/CkbAutoscala"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:textSize="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gru"
        android:id="@+id/CkbGru"
        android:layout_below="@+id/CkbAutoBotte"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:textSize="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barca"
        android:id="@+id/CkbBarca"
        android:layout_below="@+id/CkbGru"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:textSize="22dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anfibio"
        android:id="@+id/CkbAnfibio"
        android:layout_below="@+id/CkbBarca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Km"
        android:id="@+id/textView13"
        android:textSize="22dp"
        android:layout_alignTop="@+id/CkbAps"
        android:layout_toEndOf="@+id/AnnBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_toEndOf="@+id/textView13"
        android:width="40dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/CkbAutoscala" />

</RelativeLayout>
