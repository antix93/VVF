<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tizi.vvf.Tab2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Intervento"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:id="@+id/NumInt"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginStart="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dettaglio \n Anagrafica"
        android:id="@+id/DetAnaBtn"
        android:layout_marginTop="31dp"
        android:width="140dp"
        android:height="100dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/NotBtn"
        android:layout_alignEnd="@+id/NumInt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:id="@+id/NotBtn"
        android:width="140dp"
        android:height="100dp"
        android:layout_alignTop="@+id/DetAnaBtn"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/maps"
        android:clickable="false"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/OraBtn"
        android:layout_toStartOf="@+id/NumInt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/CamBtn"
        android:width="140dp"
        android:height="100dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignEnd="@+id/OraBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orari \n Uscita/Rientro"
        android:id="@+id/OraBtn"
        android:height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/MezIntBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
